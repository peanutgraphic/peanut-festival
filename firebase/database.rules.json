{
  "rules": {
    "festivals": {
      ".read": true,
      ".write": "auth != null",
      "$festival_id": {
        ".validate": "newData.hasChildren(['id', 'name', 'status'])"
      }
    },
    "votes": {
      ".read": true,
      ".write": "auth != null",
      "$show_id": {
        ".validate": "newData.hasChild('total')"
      }
    },
    "matches": {
      ".read": true,
      ".write": "auth != null",
      "$match_id": {
        ".validate": "newData.hasChildren(['id', 'status'])"
      }
    },
    "shows": {
      ".read": true,
      ".write": "auth != null"
    },
    "performers": {
      ".read": true,
      ".write": "auth != null"
    },
    "leaderboard": {
      ".read": true,
      ".write": "auth != null"
    },
    "competitions": {
      ".read": true,
      ".write": "auth != null"
    },
    "subscriptions": {
      ".read": "auth != null",
      "$token": {
        ".write": true,
        ".validate": "newData.hasChildren(['token', 'created_at'])"
      }
    },
    "test": {
      ".read": true,
      ".write": "auth != null"
    },
    "$other": {
      ".read": false,
      ".write": false
    }
  }
}
